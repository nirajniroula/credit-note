<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TutorialActivity">

    <com.dev.sacot41.scviewpager.SCViewPager
        android:id="@+id/viewpager_tuts"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.dev.sacot41.scviewpager.DotsView
        android:id="@+id/dotsview_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/icon_4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_add_circle_black_24dp" />

    <ImageView
        android:id="@+id/icon_11"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_remove_circle_black_24dp" />

    <TextView
        android:id="@+id/text_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:padding="@dimen/searchCardMarginVertical"
        android:text="@string/tut_text_0"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/icon_12"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_dollar" />

    <ImageView
        android:id="@+id/icon_19"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@mipmap/ic_rupiya" />


    <ImageView
        android:id="@+id/credit_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/credit_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/two" />


    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:padding="@dimen/searchCardMarginVertical"
        android:text="@string/tut_text_1"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/cloud"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/three" />


    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:padding="@dimen/searchCardMarginVertical"
        android:text="@string/tut_text_2"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/remind_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/five" />

    <ImageView
        android:id="@+id/remind_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/six" />

    <ImageView
        android:id="@+id/ready"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_check_circle_black_24dp" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:padding="@dimen/searchCardMarginVertical"
        android:text="@string/tut_text_3"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>
